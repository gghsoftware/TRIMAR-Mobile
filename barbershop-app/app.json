{
  "expo": {
    "name": "Barbershop",
    "slug": "barbershop",
    "version": "1.0.0",
    "sdkVersion": "54.0.0",
    "icon": "./assets/icon.png",
    "entryPoint": "expo-router/entry",
    "plugins": ["expo-router"],
    "ios": {
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access for AR hairstyle try-on features.",
        "NSMicrophoneUsageDescription": "This app needs microphone access for AR features."
      }
    },
    "android": {
      "package": "com.arisrobles.trimarmobile",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "extra": {
      "eas": { "projectId": "022b04aa-d948-4abd-bdd9-f74c7178628f" }
    }
  }
}
